    },
    "autoload": {
        "psr-4": {
            "": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Stanislav Shupilkin",
            "email": "smolevich90@gmail.com"
        }
    ],
